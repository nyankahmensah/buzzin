<div class="container-fluid">
	<%- message %>
	<div class="card shadow mb-4">
		<div class="card-header py-3 d-flex justify-content-between align-items-center">
			<h6 class="m-0 font-weight-bold text-primary">Buses</h6>

			<a class="float-right btn btn-primary btn-sm" href="#" data-toggle="modal" data-target="#addBusModal">
				<i class="fas fa-plus fa-sm fa-fw mr-1 text-white"></i>
				Add Bus
			</a>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>#</th>
							<th>Number</th>
							<th>Brand</th>
							<th>Capacity</th>
							<th>Action</th>
						</tr>
					</thead>
					<tfoot>
						<tr>
							<th>#</th>
							<th>Number</th>
							<th>Brand</th>
							<th>Capacity</th>
							<th>Action</th>
						</tr>
					</tfoot>
					<tbody>
	                    <% buses.forEach(function(bus, key){ %>
	                    <tr>
	                      <td><%= key+1 %></td>
	                      <td><%= bus.number %></td>
	                      <td><%= bus.brand %></td>
	                      <td><%= bus.capacity %></td>
	                      <td><a href=<%= "/admin/buses/"+bus._id %> class="text-danger">delete</a></td>
	                    </tr>
	                    <% }); %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="addBusModal" tabindex="-1" role="dialog" aria-labelledby="addBusModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Add New Bus</h5>
				<button class="close" type="button" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">Ã—</span>
				</button>
			</div>
			<form method="post" action="/admin/buses">
				<div class="modal-body">
					<div class="form-group">
						<input name="number" type="text" class="form-control" id="number" placeholder="eg. GR 3434 19" required>
					</div>
					<div class="form-group">
						<input name="brand" type="text" class="form-control" id="brand" placeholder="eg. TOYOTA" required>
					</div>
					<div class="form-group">
						<input name="capacity" type="number" class="form-control" id="capacity" placeholder="eg. 31" required>
					</div>
				</div>
				<div class="modal-footer">
					<button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
					<button class="btn btn-primary" type="submit">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>